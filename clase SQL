

CREATE TABLE tipoUsuario(
  idTipoUsuario INT PRIMARY KEY AUTO_INCREMENT,
  tipoUsuario varchar(45)
);


CREATE TABLE usuario(
  idUsuario INT PRIMARY KEY AUTO_INCREMENT,
  nombre VARCHAR(45),
  idTipoUsuario INT NOT NULL,
  FOREIGN KEY (idTipoUsuario) REFERENCES tipoUsuario(idTipoUsuario)
);

INSERT INTO tipoUsuario(tipoUsuario) VALUES ("Estudiante");
INSERT INTO tipoUsuario(tipoUsuario) VALUES ("Trabajador");

INSERT INTO usuario(nombre,idTipoUsuario) VALUES ("Juan Perez",1);
INSERT INTO usuario(nombre,idTipoUsuario) VALUES ("Pedro Paramo",2);

select * from usuario where idTipoUsuario=1;

SELECT u.nombre FROM usuario as u, tipoUsuario as t
  WHERE t.tipoUsuario="empleado" A
  t.idTipoUsuario=u.idTipoUsuario;


SELECT u.nombre FROM usuario as u INNER JOIN tipoUsuario as t ON u.idTipoUsuario=t.idTipoUsuario
WHERE u.idTipoUsuario=1 ORDER BY u.nombre;
